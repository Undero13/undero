{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["es2019", "DOM", "ES6", "DOM.Iterable", "ScriptHost"],
    "incremental": true,
    "esModuleInterop": true,
    "paths": {
      "src/*": ["./src/*"],
      "test/*": ["./test/*"]
    }
  },

  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts",
    "jest.config.*",
    "coverage"
  ]
}
